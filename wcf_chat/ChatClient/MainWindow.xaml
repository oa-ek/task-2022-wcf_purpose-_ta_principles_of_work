<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="34" Margin="44.397,10,0,0" TextWrapping="Wrap" Text="Ім'я користувача" VerticalAlignment="Top" Width="516" Grid.Column="2"/>
        <Button x:Name="bConnDicon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="238" Height="34" Grid.ColumnSpan="3"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="219" Margin="10,54,0,0" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="3"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="131" Margin="10,278,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="3" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
